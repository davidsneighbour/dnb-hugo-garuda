{
  "name": "dnb-hugo-garuda",
  "version": "1.4.0",
  "author": {
    "name": "Patrick Kollitsch",
    "email": "patrick@davids-neighbour.com",
    "web": "https://davids-neighbour.com"
  },
  "contributors": [
    {
      "name": "Patrick Kollitsch",
      "email": "patrick@davids-neighbour.com",
      "web": "https://davids-neighbour.com"
    }
  ],
  "description": "An opiniated colorful theme for Hugo by David's Neighbour",
  "license": "MIT",
  "private": true,
  "repository": "davidsneighbour/dnb-hugo-garuda",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --progress",
    "release": "standard-version --release-as patch -a -t \"v\" && git push --follow-tags origin main",
    "release-next": "standard-version --release-as minor -a -t \"v\" && git push --follow-tags origin main",
    "release-major": "standard-version --release-as major -a -t \"v\" && git push --follow-tags origin main",
    "stylelint": "stylelint assets/sass/",
    "stylelint2": "stylelint",
    "stylelint-fix": "stylelint assets/sass/ --fix"
  },
  "devDependencies": {
    "@babel/preset-env": "7.12.1",
    "autoprefixer": "10.0.2",
    "babel-loader": "8.2.1",
    "commitizen": "4.2.2",
    "cross-env": "7.0.2",
    "cssnano": "4.1.10",
    "cz-conventional-changelog": "3.3.0",
    "cz-customizable": "6.3.0",
    "cz-customizable-ghooks": "2.0.0",
    "pixrem": "5.0.0",
    "postcss": "8.1.7",
    "postcss-cli": "8.2.0",
    "precss": "4.0.0",
    "standard-version": "9.0.0",
    "stylelint": "13.7.2",
    "stylelint-config-dnb": "git://github.com/davidsneighbour/stylelint-config-dnb.git",
    "vue-loader": "15.9.5",
    "webpack": "5.4.0",
    "webpack-cli": "4.2.0"
  },
  "standard-version": {
    "skip": {
      "changelog": true
    },
    "bumpFiles": [
      {
        "filename": ".version",
        "type": "plain-text"
      },
      {
        "filename": "package.json",
        "type": "json"
      }
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-dnb/scss",
    "rules": {
      "function-disallowed-list": [
        "lighten",
        "darken"
      ]
    },
    "ignoreFiles": [
      "assets/sass/templates/*",
      "assets/sass/plugins/*"
    ]
  }
}
